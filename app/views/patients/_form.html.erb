<%= form_with model: @employee, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Imię' %></label>
    <%= form.text_field :first_name, class: 'form-control', placeholder: 'Imię', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Drugie imię' %></label>
    <%= form.text_field :second_name, class: 'form-control', placeholder: 'Drugie imię' %>
  </div>

  <div class="form-group">
    <label><%= 'Nazwisko' %></label>
    <%= form.text_field :last_name, class: 'form-control', placeholder: 'Nazwisko', :required => 'required' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', employees_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
