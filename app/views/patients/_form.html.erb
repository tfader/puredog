<%= form_with model: @patient, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Patron' %></label>
    <%= form.text_field :patron_id, data: { autocomplete: autocomplete_patron_name_patrons_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', autofocus: true %>
  </div>

  <div class="form-group">
    <label><%= 'Imię pacjenta' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Imię pacjenta', presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Gatunek' %></label>
    <%= form.text_field :variety_id, data: { autocomplete: autocomplete_variety_name_varieties_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', patients_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
