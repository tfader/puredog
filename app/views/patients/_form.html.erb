<%= form_with model: @patient, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Imię' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Imię', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <div class="form-text"><%= 'Gatunek' %></div>
    <%= form.collection_select :variety_id, Variety.all.order(:name), :id, :name, include_blank: false,  multiple: false, :class => 'form-control', :option => 'Small select' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', patients_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
