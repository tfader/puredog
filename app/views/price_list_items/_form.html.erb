<%= form_with model: [@price_list, @price_list_item], autocomplete: :off, local: true do |form| %>

  <% if Parameter.get_value('price_by_group') == 0 %>
    <% if @price_list_item.exam.present? %>
      <div class="form-group">
        <label><%= 'Badanie' %></label>
        <%= form.text_field :exam_id, data: { autocomplete: autocomplete_exam_name_exams_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', id: 'exam_id', autofocus: true, value: @price_list_item.exam.name_with_group_name %>
      </div>
    <% else %>
      <div class="form-group">
        <label><%= 'Badanie' %></label>
        <%= form.text_field :exam_id, data: { autocomplete: autocomplete_exam_name_exams_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', id: 'exam_id', autofocus: true %>
      </div>
    <% end %>
  <% else %>
    <% if @price_list_item.exam_group.present? %>
      <div class="form-group">
        <label><%= 'Grupa badaÅ„' %></label>
        <%= form.text_field :exam_group_id, data: { autocomplete: autocomplete_exam_group_name_exam_groups_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', id: 'exam_id', autofocus: true, value: @price_list_item.exam.name_with_group_name %>
      </div>
    <% else %>
      <div class="form-group">
        <label><%= 'Grupa badaÅ„' %></label>
        <%= form.text_field :exam_group_id, data: { autocomplete: autocomplete_exam_group_name_exam_groups_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', id: 'exam_id', autofocus: true %>
      </div>
    <% end %>
  <% end %>


  <div class="form-group">
    <label>Cena</label>
    <%= form.number_field :price, class: 'form-control', :step => 0.01, min_value: 0.01, presence: true, :required => 'required', autofocus: true, :id => 'result' %>
  </div>

  <div class="form-group">
    <%= form.check_box :is_cito, class: 'input', id: 'is_cito', type: 'checkbox' %>
    <label><%= 'Cito' %></label>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Dodaj', class: 'btn btn-sm btn-success', id: 'save-item' %>
      <%= link_to 'PowrÃ³t', price_list_price_list_items_path(@price_list), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
