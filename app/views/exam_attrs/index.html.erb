<div class="row mt-3">
  <div class="col">
    <div class="d-flex justify-content-between">
      <%= link_to 'Powrót', attr_classes_path, class: 'btn btn-sm btn-secondary' %>
      <%= link_to 'Nowy', new_exam_attr_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>
<div class="row mt-3">
  <% @exam_attrs.each do |exam_attr| %>
    <div class="col-md-4 col-sm-12">
      <div class="card m-1 mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= exam_attr.attr.name_with_class_name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= exam_attr.attr.attr_value_type %></h6>
          <p class="card-subtitle mb-2 text-muted"><%= 'Wymagany: ' %><%= exam_attr.mandatory_desc %></p>

          <%= link_to 'Usuń', patient_attr_path(exam_attr), method: :delete, class: 'card-link red' %>
        </div>
      </div>
    </div>
  <% end %>
</div>