<div class="row mt-3">
  <div class="col">
    <div class="d-flex justify-content-between">
      <%= link_to 'Powrót', exams_path, class: 'btn btn-sm btn-secondary' %>
      <%= @where_you_are %>
      <%= link_to 'Nowy', new_exam_exam_variety_path(@exam), class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>
<div class="row mt-3">
  <% @exam_varieties.each do |exam_variety| %>
    <div class="col-md-4 col-sm-12">
      <div class="card m-1 mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= exam_variety.variety.name %></h5>
          <%= link_to 'Usuń', exam_exam_variety_path(@exam, exam_variety), method: :delete, class: 'card-link red' %>
        </div>
      </div>
    </div>
  <% end %>
</div>