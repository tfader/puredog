  <div class="form-group">
    <label><%= 'Nazwa' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nazwa', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Krok' %></label>
    <%= form.number_field :flow_step, class: 'form-control', placeholder:  'Krok', autofocus: true, presence: true, :required => 'required',  :step => 1, minvalue: 1, maxvalue: 10 %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
