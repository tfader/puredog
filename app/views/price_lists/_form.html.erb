    <div class="form-group">
      <label><%= 'Klient' %></label>
      <%= form.text_field :client_id, data: { autocomplete: autocomplete_client_name_clients_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', autofocus: true %>
    </div>
  <% end %>


