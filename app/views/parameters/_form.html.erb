<%= form_with model: @parameter, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Nazwa parametru' %></label>
    <%= form.text_field :param_name, class: 'form-control', placeholder: 'Nazwa parametru', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <div class="form-text"><%= 'Typ' %></div>
    <%= form.text_field :value_type, class: 'form-control', placeholder: 'Typ parametru', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Wartość parametru' %></label>
    <%= form.text_field :param_value, class: 'form-control', placeholder: 'Wartość parametru', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', parameters_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
