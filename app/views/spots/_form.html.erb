<%= form_with model: @spot, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Nazwa' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nazwa', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <div class="form-text"><%= 'Miasto' %></div>
    <%= form.collection_select :city_id, City.all.order(default: :desc).order(:name), :id, :name, include_blank: false,  multiple: false, :class => 'form-control', :option => 'Small select' %>
  </div>

  <div class="form-group">
    <label><%= 'Ulica' %></label>
    <%= form.text_field :street, class: 'form-control', placeholder: 'Ulica', :required => 'required' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'PowrÃ³t', employees_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
