<%= form_with model: @variety, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Nazwa' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nazwa', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Ikona (nazwa pliku)' %></label>
    <%= form.text_field :file_icon, class: 'form-control', placeholder: 'Nazwa pliku z ikoną' %>
  </div>


  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', varieties_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
