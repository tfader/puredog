<!DOCTYPE html>
<html>
  <head>
    <title>PureProject</title>
    <%= favicon_link_tag 'cat--v2.png' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main">
      <main class="content">
        <div class="container-fluid body-with-background">
          <%= render 'flash_messages' %>
          <%= render 'menu_full' %>
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>
