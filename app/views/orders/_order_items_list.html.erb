  </tr>
  </thead>
  <tbody>
    <% v_i = 1 %>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <th scope="row"><%= v_i %></th>
        <td><%= order_item.patient.name_with_patron_name %></td>
        <% if order_item.is_duplicate.present? %>
          <td class="red"><%= order_item.exam.name_with_group_name %></td>
        <% else %>
          <td><%= order_item.exam.name_with_group_name %></td>
        <% end %>
        <td><%= link_to(' - ', order_order_item_path(@order, order_item), method: :delete, class: 'btn btn-sm btn-warning') %></td>
      </tr>
      <% v_i += 1 %>
    <% end %>
  </tbody>
</table>
