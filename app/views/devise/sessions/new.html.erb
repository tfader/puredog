<div class="row justify-content-center m-2 mt-4">
  <div class="col-lg-4 col-md-6 col-sm-12 text-center">
    <div class="card shadow">
      <div class="card-body">
        <h5 class="card-title mb-2">Logowanie do Pure Vet</h5>
        <p class="card-subtitle mb-4 text-muted p-small">Prototyp</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', type: 'password' %>
          </div>
          <%= f.submit "Logowanie", class: 'btn btn-primary mb-3' %>
        <% end %>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
