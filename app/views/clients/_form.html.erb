<%= form_with model: @client, autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Kod' %></label>
    <%= form.text_field :code, class: 'form-control', placeholder: 'Kod', presence: true, :required => 'required', autofocus: true %>
  </div>

  <div class="form-group">
    <label><%= 'Nazwa' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nazwa', presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Miasto' %></label>
    <%= form.text_field :city_id, data: { autocomplete: autocomplete_city_name_cities_path }, 'data-auto-focus' => true, :class => 'form-control select', :option => 'Small select', presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <label><%= 'Adres / Ulica' %></label>
    <%= form.text_field :street, class: 'form-control', placeholder: 'Adres / Ulica' %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'PowrÃ³t', clients_path, class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
