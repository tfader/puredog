<%= form_with model: [@unit, @unit_rate], autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <div class="form-text"><%= 'Na jednostkę' %></div>
    <%= form.collection_select :unit_to_id, @units_to, :id, :name, include_blank: false,  multiple: false, :class => 'form-control', :option => 'Small select' %>
  </div>

  <div class="form-group">
    <label>Przelicznik</label>
    <%= form.number_field :rate_to, validate: {presence: true}, class: 'form-control', :step => 0.00001 %>
  </div>

  <div class="form-group">
    <label>Jednostka bazowa</label>
    <%= form.number_field :rate_from, validate: {presence: true}, class: 'form-control', :step => 0.00001 %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', unit_unit_rates_path(@unit), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
