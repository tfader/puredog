<%= form_with model: [@attr_class, @attr], autocomplete: :off, local: true do |form| %>

  <div class="form-group">
    <label><%= 'Nazwa' %></label>
    <%= form.text_field :name, class: 'form-control', placeholder: 'Nazwa', autofocus: true, presence: true, :required => 'required' %>
  </div>

  <div class="form-group">
    <div class="form-text">Typ wartości</div>
    <%= form.select :value_type,  [['Tekst', 1], ['Liczba', 2], ['Data', 3]] %>
  </div>

  <div class="mt-4">
    <div class="d-flex justify-content-between">
      <%= form.submit 'Zapisz', class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Powrót', attr_class_attrs_path(@attr_class), class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>

<% end %>
